{
  "name": "unnits/bankid-client",
  "description": "Client for communication with BankID services",
  "type": "library",
  "require": {
    "php": "^8.1",
    "psr/http-client": "^1.0"
  },
  "authors": [
    {
      "name": "Dan Charousek",
      "email": "dan.charousek@unnits.com"
    },
    {
      "name": "Lenka Kolářová",
      "email": "lenka.kolarova@unnits.com"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Unnits\\BankId\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10.7",
    "squizlabs/php_codesniffer": "^3.0",
    "phpunit/phpunit": "^10.0",
    "guzzlehttp/guzzle": "^7.5"
  },
  "scripts": {
    "test": "phpunit --bootstrap vendor/autoload.php tests",
    "phpstan": "php -d memory_limit=4G vendor/bin/phpstan analyse",
    "phpcs": "phpcs --standard=PSR1,PSR12 src",
    "phpcbf": "phpcbf --standard=PSR1,PSR12 src"
  }
}
